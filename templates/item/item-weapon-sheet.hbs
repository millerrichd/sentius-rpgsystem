<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>Credits Cost</label>
          <input
            type='text'
            name='system.creditCost'
            value='{{system.creditCost}}'
            data-dtype='String'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>Rarity</label>
          <input
            type='text'
            name='system.rarity'
            value='{{system.rarity}}'
            data-dtype='String'
          />
        </div>
      </div>
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>Quantity</label>
          <input
            type='text'
            name='system.quantity'
            value='{{system.quantity}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>Weight</label>
          <input
            type='text'
            name='system.weight'
            value='{{system.weight}}'
            data-dtype='Number'
          />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>Description</a>
    <a class='item' data-tab='attributes'>Attributes</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>

    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.description'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      <div class='resource'>
        <label class='resource-label'>Roll Formula:</label>
        <span>{{system.formula}}</span>
        <div class='grid grid-4col'>
          <div class='grid-span-1'>
            <label class='resource-label'>Number of Dice</label>
            <input
              type='text'
              name='system.diceNum'
              value='{{system.diceNum}}'
              data-dtype='Number'
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Die Size</label>
            <input
              type='text'
              name='system.diceSize'
              value='{{system.diceSize}}'
              data-dtype='String'
            />
          </div>
          <div class='grid-span-2'>
            <label class='resource-label'>Roll Modifier</label>
            <input
              type='text'
              name='system.diceBonus'
              value='{{system.diceBonus}}'
              data-dtype='String'
            />
          </div>
        </div>
        <div class='grid grid-3col'>
          <div class='grid-span-1'>
            <label class='resource-label'>Range Increment</label>
            <input
              type='text'
              name='system.rangeIncrement'
              value='{{system.rangeIncrement}}'
              data-dtype='String'
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Capacity</label>
            <input
              type='text'
              name='system.capacity'
              value='{{system.capacity}}'
              data-dtype='Number'
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Rate of Fire</label>
            <input
              type='text'
              name='system.rateOfFire'
              value='{{system.rateOfFire}}'
              data-dtype='Number'
            />
          </div>
        </div>
        <div class='grid grid-3col'>
          <div class='grid-span-1'>
            <label class='resource-label'>Attack Type</label>
            <input
              type='text'
              name='system.attackType'
              value='{{system.attackType}}'
              data-dtype='String'
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Damage Type</label>
            <input
              type='text'
              name='system.damageType'
              value='{{system.damageType}}'
              data-dtype='String'
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Armor Piercing</label>
            <input
              type='text'
              name='system.armorPiercing'
              value='{{system.armorPiercing}}'
              data-dtype='Number'
            />
          </div>
        </div>
        <div class='grid grid-3col'>
          <div class='grid-span-1'>
            <label class='resource-label'>Min Strength Bonus</label>
            <input
              type='text'
              name='system.minStrengthBonus'
              value='{{system.minStrengthBonus}}'
              data-dtype='Number'
            />
          </div>
          <div class='grid-span-2'>
            <label class='resource-label'>Properties</label>
            <input
              type='text'
              name='system.properties'
              value='{{system.properties}}'
              data-dtype='String'
            />
          </div>
        </div>
        <div class='grid grid-3col'>
          <div class='grid-span-1'>
            <label class='resource-label'>Heavy Weapon</label>
            <input
              type='checkbox'
              name='system.heavyWeapon'
              value='{{system.heavyWeapon}}'
              class="mark-heavy"
              data-dtype='String'
              {{#if system.heavyWeapon}}checked{{/if}}
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Equipped</label>
            <input
              type='checkbox'
              name='system.equipped'
              value='{{system.equipped}}'
              data-dtype='String'
              {{#if system.equipped}}checked{{/if}}
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Two Handed</label>
            <input
              type='checkbox'
              name='system.twohanded'
              value='{{system.twohanded}}'
              class="mark-twohands"
              data-dtype='String'
              {{#if system.twohanded}}checked{{/if}}
            />
          </div>
        </div>
        <div class='grid grid-3col'>
          <div class='grid-span-1'>
            <label class='resource-label'>Burning</label>
            <input
              type='checkbox'
              name='system.burning'
              value='{{system.burning}}'
              class="mark-burning"
              data-dtype='String'
              {{#if system.burning}}checked{{/if}}
            />
          </div>
          <div class='grid-span-1'>
            <label class='resource-label'>Disintegration</label>
            <input
              type='checkbox'
              name='system.disintegration'
              value='{{system.disintegration}}'
              class="mark-dist"
              data-dtype='String'
              {{#if system.disintegration}}checked{{/if}}
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</form>