<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">Health</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.power.value" class="resource-label">Power</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.power.value" value="{{system.power.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.power.max" value="{{system.power.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.level.value" class="resource-label">Level</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.attributes.level.value" value="{{system.attributes.level.value}}" data-dtype="Number"/>
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="features">Features</a>
    <a class="item" data-tab="skills">Skills</a>
    <div class="dropdown">
      <div class="item" data-tab="gear">Gear
        <i class="fa fa-caret-down"></i>
      </div>
      <div class="dropdown-content">
        <a class="item" data-tab="combo-wapa">Armor, Weapon, &amp; Power Armor</a>
        <a class="item" data-tab="equipment">Equipment</a>
        <a class="item" data-tab="vehicle">Vehicle</a>
        <a class="item" data-tab="augmentation">Cybernetics &amp; Bionetics</a>
      </div>
    </div>
    <div class="dropdown">
      <div class="item" data-tab="magic">Magic
        <i class="fa fa-caret-down"></i>
      </div>
      <div class="dropdown-content">
        <a class="item" data-tab="spells">Spell Energies</a>
        <a class="item" data-tab="psychicpowers">Psychic Powers</a>
        <a class="item" data-tab="totem">Totem Aspect</a>
      </div>
    </div>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Pools/Hindrance/Traits Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      <section class="grid grid-1col">
        <section class="main grid-span-1">
          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns.  --}}
          {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-abilities.hbs"}}
        </section>
        {{!-- For the main features list, span the right two columns --}}
        <section class="main grid-span-1">
          {{!-- we want the pools available before hindrances/traits --}}
          {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-pools.hbs"}}
          {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-hindrance.hbs"}}
          {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-trait.hbs"}}
        </section>
      </section>
    </div>

    <div class="tab skills" data-group="primary" data-tab="skills">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-skills.hbs"}}
    </div> 

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-combo-wapa.hbs"}}
    </div>
    <div class="tab combo" data-group="primary" data-tab="combo-wapa">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-combo-wapa.hbs"}}
    </div>

    {{!-- Owned Equipement SUB-Tab --}}
    <div class="tab equipment" data-group="primary" data-tab="equipment">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-equipment.hbs"}}
    </div>

    {{!-- Owned Vehicle SUB-Tab --}}
    <div class="tab vehicle" data-group="primary" data-tab="vehicle">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-vehicle.hbs"}}
    </div>

    {{!-- Owned Cybernetic SUB-Tab --}}
    <div class="tab augmentation" data-group="primary" data-tab="augmentation">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-augmentation.hbs"}}
    </div>

    {{!-- Owned Spells SUB-Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Owned totem SUB-Tab --}}
    <div class="tab totem" data-group="primary" data-tab="totem">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-totems.hbs"}}
    </div>

    {{!-- Owned Psychic Powers SUB-Tab --}}
    <div class="tab psychicpowers" data-group="primary" data-tab="psychicpowers">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-psychicpowers.hbs"}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/sentius-rpgsystem/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>
