<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Hindrances'}}</div>
    <div class="item-rating">{{localize 'Rating'}}</div>
    <div class='item-controls'>
    </div>
  </li>
  {{#each hindrances as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class="item-rating">
        <span class="align-center">{{item.system.attributes.rating}}</span>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='hindrance'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='hindrance'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    <li class='item flexrow item-row-desc' data-item-id='{{item._id}}'>
      <div class='item-description'>{{{item.system.description}}}</div>
    </li>
  {{/each}}
</ol>